{
	"name": "G-Tags | Google Analytics tags tracker",
	"short_name" : "G-Tags",
	"manifest_version": 2,
	"version": "6.0.1",
	"minimum_chrome_version":"44.0.2403",

	"description": "Catch all Google Analytics tags. Filter by type and details. Parameters meaning. Copy/Paste in tabulated format (Excel compliant).", 

	"icons": {
		"16": "img/16.png",
		"19": "img/19.png",
		"22": "img/22.png",
		"24": "img/24.png",
		"32": "img/32.png",
		"48": "img/48.png",
		"128": "img/128.png"
	},

	"options_page": "option.html",
	"background": { "page":"background.html" },

	"browser_action": {
		"default_icon": 
		{
			"19":"img/19bw.png"
		},
		"default_title": "G-Tags by Schneider Electric"
	},	

	"permissions": ["storage","clipboardWrite","tabs","webRequest",
	"*://*.google-analytics.com/__utm.gif*",
	"*://*.google-analytics.com/r*",
	"*://*.google-analytics.com/collect*",
	"*://stats.g.doubleclick.net/__utm.gif*",
	"*://stats.g.doubleclick.net/collect*",
	"*://stats.g.doubleclick.net/r*"]
}

{
	"name": "XTag Google Analytics: Record & check UA,GA4",
	"short_name" : "XTag GA",
	"manifest_version": 3,
	"version": "9.0.0",
	"minimum_chrome_version":"88.0.0000",

	"description": "Categorize, record and display Google Analytics tags, with parameters meaning.", 

	"icons": {
		"16": "img/16.png",
		"19": "img/19.png",		
		"24": "img/24.png",		
		"32": "img/32.png",
		"38": "img/38.png",
		"48": "img/48.png",
		"128": "img/128.png"		
	},

	"options_page": "option.html",
	"background": { "service_worker":"js/background.js" },

	"action": {
		"default_popup": "popup.html",
		"default_icon": {
		"16": "img/16bw.png",
		"19": "img/19bw.png",		
		"32": "img/32bw.png",
		"38": "img/38bw.png"	
		},
		"default_title": "XTag for Google Analytics"
	},	

	"permissions": ["storage","clipboardWrite","activeTab","tabs", "webRequest","scripting"],

	"host_permissions": [
	"*://*/__utm.gif*",
	"*://*.google-analytics.com/r*",
	"*://*/collect*",
	"*://stats.g.doubleclick.net/r*"]
}
